<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ALL FILES</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            overflow: hidden;
        }

        .wrapper {
            background-color: rgb(0, 0, 0);
            height: 100vh;
            width: 100vw;
            display: flex;
            align-items: center;
            flex-direction: column;
            gap: 20px;
        }

        .container {
            height: 90%;
            width: 100%;
            display: flex;

            flex-direction: row;
            flex-wrap: wrap;
            padding: 10px;
            gap: 10px;
        }

        #image {
            height: 250px;
            width: 227px;
            border-radius: 20px;
            background-position: center;
            background-size: cover;
        }

        .users {
            background-color: rgb(51, 60, 60);
            height: 350px;
            width: 227px;
            border-radius: 20px;
            color: #fff;
            gap: 20px;

            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        .editsection {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 50px;
            /* margin: 20px; */
        }

        h3 {
            color: rgb(187, 178, 178);
        }

        h1 {
            color: #fff;
        }

        a {
            color: red;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="wrapper">

        <h1>ALL USER LIST</h1>

        <a href="/">BACK TO HOME PAGE</a>

        <div class="container">
            <% userdata.forEach(function(user){ %>
                <div class="users">

                    <img src="<%= user.image %>" alt="image" id="image">

                    <h2 id="texts">
                        <%= user.name %>
                    </h2>
                    <h3 id="texts">
                        <%= user.email %>
                    </h3>

                    <div class="editsection">
                        <a href="/edit">edit</a>
                        <a href="/delete">Delete file</a>
                    </div>

                </div>
                <% }) %>


        </div>


    </div>



</body>

</html>